/* http://www.usaco.org/index.php?page=viewproblem2&cpid=1012 */
#include<bits/stdc++.h>
using namespace std;

int main(){
	freopen("breedflip.in","r",stdin);
	freopen("breedflip.out","w",stdout);
	int n;
	cin >> n;
	string a,b;
	cin >> a >> b;
	vector<int> x;
	int e = 0; 
	for(int i=0;i<n;i++){
		if(a[i]!=b[i]){
			e++;
		}
		else{
			if(e>0){	
				x.push_back(e);
			}
			e = 0;
		}
	}
	cout << x.size();
	return 0;
}

